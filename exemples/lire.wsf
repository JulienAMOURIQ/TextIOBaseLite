<job>
<script language="VBScript" src="TextIOBaseLite.vbs"/>
<script language="VBScript">
    dim ofichier : set ofichier = open("C:\exemple.txt", "r", "utf-8", "\r\n")
    dim lignes, i
    lignes = ofichier.readlines()
    For i = 0 To UBound(lignes)
        WScript.Echo lignes(i)
    Next
</script>
</job>
